@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, Search Files</h1>
    <br />
    <div class="row justify-content-md-center">
        <div class="col-md-8">

            <form asp-action="Search" asp-controller="Upload">

                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search ... " aria-label="Recipient's username" aria-describedby="button-addon2" name="Term">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="bi bi-google"></i></button>
                </div>

            </form>

        </div>
        <div class="col-md-12 text-start" style="margin-top : 40px">
            <h2> Popular Download </h2>

            <hr />


            <table id="Companies" class="table table-striped table-bordered dt-responsive nowrap">
                <tbody>
                    @foreach (UploadViewModel item in ViewBag.popular)
                    {
                        <tr>
                            <td>
                                @if (item.ContentType.ToLower().StartsWith("image/"))
                                {
                                    <img width="70" height="70" src="~/Uploads/@item.FileName" class="img-thumbnail" alt="@item.OriginalFileName" />
                                }
                                else
                                {
                                    <img src="~/img/File.png" width="70" height="70" class="img-thumbnail" alt="@item.OriginalFileName" />
                                }
                            </td>
                            <td>
                                <strong> Name : </strong> @item.OriginalFileName
                            </td>
                            <td>
                                <strong> Download Count : </strong> @item.DownloadCount
                            </td>

                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>
